<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PerfectOrderActivity">

    <include layout="@layout/toolbar_base_layout"></include>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_moreng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_moren" />

                    <TextView
                        android:id="@+id/tv_dizhi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="广东省广州市天河区"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_xiangxi_dizhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="钻汇大厦东西门4栋401室"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_xuanzhe_dizhi"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@mipmap/youjianto" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="王殊桥  138****3821"
                    android:textColor="#333333"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/fgx" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_zhifu_fanshe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="支付宝支付"
                    android:textColor="#FFC57715"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_xuanzhe_zhifu"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="6dp"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shangping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠劵"
                    android:textColor="#FF333333"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_youhuijuan_leixing"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/order_shape"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="已选最高优惠"
                    android:textColor="#FFB01F29"
                    android:textSize="10sp" />
                <View
                    android:layout_weight="1"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_youhuijuan_moeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:text="优惠¥30"
                    android:textColor="#FFC57715"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_xuanzhe_youhuijuan"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="6dp"
                    android:src="@mipmap/icon_more" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />

            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="商品金额"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_shangping_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥168.6"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_yunfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+168.6"
                        android:textColor="#FFB01F29"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="优惠劵"
                        android:textColor="#FF333333"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_youhuijuan_jianmian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-¥168"
                        android:textColor="#FFB01F29"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F7F7F7" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/tv_add_moeny"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="307.2"
            android:textColor="#FFB01F29"
            android:textSize="20sp" />

        <View
            android:layout_weight="1"
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_marginRight="15dp"
            android:background="@drawable/tv_add_send"
            android:textStyle="bold"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:layout_width="105dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>