<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.CommoditDetailsyActivity">
    <com.example.oneteaapp.view.StatusBarHeightView
        android:layout_width="match_parent"
        app:use_type="use_height"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
    </com.example.oneteaapp.view.StatusBarHeightView>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_return"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@mipmap/fanghui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:layout_gravity="center"
            android:id="@+id/tab_layout"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:tabIndicatorColor="#E5CA98"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#333333"
            app:tabTextColor="#4c4c4c"
            app:tabTextAppearance="@style/TabLayoutStyle"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_commodity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_img"
        android:layout_width="match_parent"
        android:layout_height="375dp"></android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/tv_vpsum"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="right|bottom"
            android:text=""
            android:gravity="center"
            android:background="@drawable/text_vp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_width="48dp"
            android:layout_height="22dp" />
    </FrameLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="¥ 186"
                android:textColor="#B01F29"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_xmoney"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="186"
                android:textColor="#999999"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginHorizontal="15dp"
            android:lineSpacingExtra="@dimen/dp_10"
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="安吉白茶 茶叶白茶2019新茶明前春茶 珍稀黄金芽叶白茶正宗安吉原产散装"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent">
                <TextView
                    android:text="货源地："
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_area"
                    android:text="福建"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年份："
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent">
                <TextView
                    android:text="库存："
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_inventory"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:text="已选      "
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_grade"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <LinearLayout
                    android:id="@+id/ll_grade"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/icon_more" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:text="运费      "
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_freight"
                    android:text="免运费"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@mipmap/xqtu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginHorizontal="15dp"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:src="@mipmap/xqtu" />
    </LinearLayout>

    <WebView
        android:id="@+id/web_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/ll_collect"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tv_xinxin"
                android:background="@drawable/xinxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#333333"
                android:layout_marginHorizontal="15dp"
                android:text="收藏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shopping_car"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="22dp"
                android:layout_height="25dp">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_gwc"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_commodity_sum"
                    android:gravity="center"
                    android:background="@drawable/quan_red"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:layout_gravity="right"
                    android:layout_width="13dp"
                    android:layout_height="13dp" />
            </FrameLayout>
            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="10sp"
                android:textColor="#333333"
                android:layout_marginHorizontal="15dp"
                android:text="购物车"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_shopping"
            android:text="加入购物车"
            android:background="#C04040"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_purchase"
            android:text="立即购买"
            android:background="#D6B575"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>