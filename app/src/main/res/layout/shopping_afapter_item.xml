<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFFFFF"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp">
<View
    android:background="#F7F7F7"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_xuznzhe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_xuanzheimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/xuanzhe" />
        </LinearLayout>
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_shopping_img"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_title_2"
                android:layout_marginTop="10dp"
                android:text="安吉白茶 茶叶白茶2019新..."
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="¥168.6"
                    android:textColor="#C00020"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="50dp">

                    <View
                        android:layout_weight="1"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/ll_aee"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:src="@mipmap/icon_subtract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_sum"
                        android:background="@drawable/tv_add_bg"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="center"
                        android:text="1"
                        android:layout_width="48dp"
                        android:layout_height="30dp" />


                    <LinearLayout
                        android:id="@+id/ll_add"
                        android:gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:src="@mipmap/icon_add"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>