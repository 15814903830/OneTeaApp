<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.oneteaapp.view.StatusBarHeightView
        android:background="#944438"
        app:use_type="use_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.oneteaapp.view.StatusBarHeightView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#944438"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <LinearLayout
            android:layout_marginHorizontal="19dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_saoma"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_saoma"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <View
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/iv_shengzhi"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/xz1"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <FrameLayout
                android:id="@+id/fl_gwc"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/gowuc"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <TextView
                    android:gravity="center"
                    android:text="1"
                    android:background="@drawable/quan"
                    android:textColor="#D5B36F"
                    android:textSize="10sp"
                    android:layout_gravity="right"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#944438"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_hend_img"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_zhifubao01"
            android:layout_width="52dp"
            android:layout_height="52dp" />


        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_phone"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/ll_fengxiaohuiyuan"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/mytop"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/icon_role"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10" />
                    <TextView
                        android:layout_marginLeft="2.5dp"
                        android:text="分销会员"
                        android:textColor="#FCD38F"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_yaoqinma"
                android:layout_marginTop="15dp"
                android:text="邀请码：45A4Rq"
                android:textColor="#50FFFFFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#944438"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_hend1"
            android:text="2000.68"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="7dp"
            android:text="账户余额(元)"
            android:textColor="#50FFFFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hend2"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:text="我的库存"
                android:textColor="#50FFFFFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hend3"
                android:text="2000.68"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:text="我的佣金(元)"
                android:textColor="#50FFFFFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hend4"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:text="我的团队"
                android:textColor="#50FFFFFF"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/mybg"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="82dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my1"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_marginTop="7dp"
                    android:text="待发货"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my2"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_marginTop="7dp"
                    android:text="已发货"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@mipmap/my3" />
                <TextView
                    android:layout_marginTop="7dp"
                    android:text="已完成"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/my4"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:layout_marginTop="7dp"
                    android:text="全部订单"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/wdjy"/>
        <include layout="@layout/jdgl"/>
        <include layout="@layout/wdfw"/>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>