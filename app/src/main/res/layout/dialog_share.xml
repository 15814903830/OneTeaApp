<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="5"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tv_img"
                android:layout_margin="15dp"
                android:src="@mipmap/shangping"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tv_title"
                    android:lineSpacingExtra="5dp"
                    android:text="2019单芽白豪闽景印象250g礼盒罐装"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_marginTop="23dp"
                    android:text="¥ 168.58"
                    android:textColor="#B01F29"
                    android:textSize="15sp"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_year"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/tv_year"
                    android:textSize="12sp"
                    android:text="年份：2019年"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|top">

            <LinearLayout
                android:id="@+id/ll_dismiss"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_cancel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#FF333333"
        android:textStyle="bold"
        android:text="规格"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_xuanzhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#FF333333"
        android:textStyle="bold"
        android:text="数量"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="50dp">

            <View
                android:layout_weight="1"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/ll_aee"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@mipmap/icon_subtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_sum"
                android:background="@drawable/tv_add_bg"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:text="1"
                android:layout_width="48dp"
                android:layout_height="30dp" />


            <LinearLayout
                android:id="@+id/ll_add"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="50dp">
                <ImageView
                    android:src="@mipmap/icon_add"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="#FF666666"
            android:text="已选择1张，可优惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#FFC00020"
            android:text="¥30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_send"
        android:background="@drawable/tv_add_send"
        android:textColor="#FFFFFF"
        android:text="确定使用"
        android:layout_marginHorizontal="15dp"
        android:layout_gravity="bottom"
        android:layout_width="105dp"
        android:layout_height="@dimen/dp_40" />
    </LinearLayout>
</LinearLayout>