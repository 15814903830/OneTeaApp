<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.LogingActivity">

    <include layout="@layout/logig_toolbar_base_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
          >

            <TextView
                android:layout_marginVertical="15dp"
                android:text="请输入验证码"
                android:textSize="22sp"
                android:textColor="#FF333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_xinxi"
                android:text=""
                android:textSize="13sp"
                android:textColor="#FF999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/et_mobile_code"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/log_shape"
            android:hint="验证码"
            android:numeric="integer"
            android:paddingHorizontal="@dimen/dp_10"
            android:singleLine="true"></EditText>

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/log_shape"
            android:hint="密码"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingHorizontal="@dimen/dp_10"
            android:singleLine="true"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/log_shape"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_password_two"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/log_shape"
                android:hint="再次输入密码"
                android:paddingHorizontal="@dimen/dp_10"></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tv_add_send99"
            android:text="提交"
            android:textColor="#FFFFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录即表示您已阅读并同意"
                android:textColor="#FF999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_xieyi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《壹號茗谷服务协议》"
                android:textColor="#FFD6B575"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="、"
                android:textColor="#FF999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_xieyi_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="#FFD6B575"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>